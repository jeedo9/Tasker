{
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@*": ["src/*"],
      "@typings/*": ["src/types/*"],
      "@shared/*": ["../shared/*"]
    },
    "target": "es2024",
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
  }
}